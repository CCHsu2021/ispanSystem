@addTagHelper *, MSITTeam1
@model MSITTeam1.ViewModels.TCompanyResumeReceiveViewModel

@{
    ViewData["Title"] = "StudentResumeDetail";
}

    <section class="message">
        <h2><span class="icon icon-star-large"></span> 應徵職缺：@Model.JobName <span class="icon icon-reply-large"></span><span class="icon icon-delete-large"></span></h2>
        <div class="meta-data">
            <p>
                向 @Model.FCompanyName 寄出的求職信
                <span class="date">建立時間：@(Convert.ToDateTime(Model.CreatTime).ToString("yyyy-MM-dd"))</span>
                <span class="date">最後修改時間：@(Convert.ToDateTime(Model.ModifyTime).ToString("yyyy-MM-dd"))</span>
            </p>
        </div>
        <div class="body">
            <div class="form-group">
                <label asp-for="ContactPhone" class="control-label"></label>
                <label class="col-form-label">@Model.ContactPhone</label>
            </div>
            <div class="form-group">
                <label asp-for="ContactEmail" class="control-label"></label>
                <label class="col-form-label">@Model.ContactEmail</label>
            </div>
            <div class="form-group">
                <label class="control-label">可聯絡時間</label>
                <label class="col-form-label">@Model.TimeToContact</label>
            </div>
            <div class="form-group">
                <pre class="col-12  py-2" style="line-height:1.5rem;">@Model.CoverLetter</pre>
            </div>
        </div>
    </section>
    <button class="btn-style-two" type="button" asp-controller="MemberPostMessage" asp-action="OutboxIndex">回上一頁</button>
    
@section Scripts{ 
    <script>
        flatpickr('#InterviewTime', {
            minDate: 'today',
            dateFormat: 'Y-m-d'
        });
    </script>
}
