                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FDistrict)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactAddress)
            </td>
