            line-height: inherit;
            color: #252b46;
            text-transform: capitalize;
        }

        .paragraph {
            font-family: inherit;
            font-size: 1rem;
            font-weight: normal;
            line-height: inherit;
            max-width: 100%;
            margin-top: 0.5rem;
            color: #9194a1;
        }

        .main .tab {
            width: 100%;
            height: auto;
            padding: 3rem 0;
        }

        .main .tab-menu {
            display: -webkit-box;
            display: -ms-flexbox;
            display: flex;
            -webkit-box-orient: horizontal;
            -webkit-box-direction: normal;
            -ms-flex-direction: row;
            flex-direction: row;
            -webkit-box-pack: justify;
            -ms-flex-pack: justify;
            justify-content: space-between;
            -webkit-box-align: center;
            -ms-flex-align: center;
            align-items: center;
            max-width: 100%;
            height: auto;
            margin: 0 auto;
            border-bottom: 1.3px solid #dbdbdb;
