            color: #9194a1;
            background: #ffffff;
            -webkit-transition: all 0.3s ease;
            transition: all 0.3s ease;
        }

            .main .tab-menu-link::before {
                position: absolute;
                content: "";
                top: 0;
                left: 0;
                width: 100%;
                height: auto;
                z-index: 2;
            }

            .main .tab-menu-link.is-active {
