                }

        /* Totals section */
        .totals .totals-item {
            float: right;
            clear: both;
            width: 100%;
            margin-bottom: 10px;
        }

            .totals .totals-item label {
                float: left;
                clear: both;
                width: 79%;
                text-align: right;
            }

            .totals .totals-item .totals-value {
