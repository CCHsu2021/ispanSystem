                    <div id="home" class="container tab-pane active">
                        <vc:question-bank-create></vc:question-bank-create>
                    </div>
                    <div id="menu1" class="container tab-pane fade">
                        <vc:question-bank-list></vc:question-bank-list>
                    </div>
