@model MSITTeam1.ViewModels.CQuestionBankViewModel

@{
    ViewData["Title"] = "Create";
}

@section Style{ 
<style>

    input[type='checkbox'] {
        vertical-align: text-bottom;
        margin-bottom: 1px;
        padding:5px;
    }

    #ansList > #choice > #txtAns{
        display:inline !important;
        width: 90% !important;
    }
</style>
}
<div class="container" id="outdiv" style="padding:20px">
    <h1>新增</h1>

    <h4>新增題目</h4>
    <hr />

    <div class="row" style="padding:20px;">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FSubjectId" class="control-label"></label>
                    <select id="FSubjectId" asp-for="FSubjectId" class="form-control">
                        <option>其他</option>
                    </select>
                    <span asp-validation-for="FSubjectId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FQuestionTypeId" class="control-label"></label>
                    <select id="FQuestionTypeId" asp-for="FQuestionTypeId" class="form-control">
                        <option value="1">單選題</option>
                        <option value="2">多選題</option>
                        <option value="3">填空題</option>
                    </select>
                    <span asp-validation-for="FQuestionTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FQuestion" class="control-label"></label>
                    <input id="FQuestion" asp-for="FQuestion" class="form-control" />
                    <span asp-validation-for="FQuestion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FQuestionTypeId" class="control-label"></label>
                    <input id="FQuestionTypeId" asp-for="FQuestionTypeId" class="form-control" />
                    <span asp-validation-for="FQuestionTypeId" class="text-danger"></span>
                </div>
                <div id="ansList">
                    <div class="form-group" id="choice">
                        <label asp-for="FChoice" class="control-label"></label>
                        <br />
                            <input type="checkbox" name="FCorrectAnswer" value=1 onclick="doCheck(this)" />
                            <input id="txtAns" asp-for="FChoice" class="form-control" />
                        <span asp-validation-for="FChoice" class="text-danger"></span>
                    </div>
                        
                </div>
                <div style="padding:10px 0px 30px 30px;">
                    <btn id="BtnNewChoice" class="btn btn-primary btn-outline small" >新增答案選項</btn>
                </div>
                <div class="form-group">
                    <label asp-for="FLevel" class="control-label"></label>
                    <input id="FLevel" asp-for="FLevel" class="form-control" />
                    <span asp-validation-for="FLevel" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @*<input type="submit" id="createNew" value="Create" class="btn btn-primary" />*@
                    <button class="btn btn-primary" type="button" id="createNew">測試</button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="List">返回列表</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // 判斷Checkbox
        var c = 0, limit = 1;
        function doCheck(obj) {
            console.log(c,limit);
            obj.checked ? c++ : c--;
            if (c > limit) {
                obj.checked = false;
                alert("over");
                c--;
            }
        }
        //題型判斷答案輸入欄位
        $('#FQuestionTypeId').change(function () {
            if ($(this).val() === "3") {
                console.log("OK");
                $('#BtnNewChoice').hide();
                $('#ansList > #choice > label').html("答案");
                $('#ansList div:not(:first-child)').remove();
                $('#ansList > #choice > checkbox').hide();
            } else if ($(this).val() === "2") {
                limit = 100;
                $('#BtnNewChoice').show();
                $('#ansList > #choice > label').html("選項");
            } else if ($(this).val() === "1") {
                limit = 1;
                $('#BtnNewChoice').show();
                $('#ansList > #choice > label').html("選項");
            }
        })


        // 新增選項textbox
        var count = 1;
        const btnNewChoice = document.querySelector('#BtnNewChoice');
        btnNewChoice.addEventListener('click', function () {
            count++;
            //var divChoice = "<div class=form-group id=choice c><label asp -for= FChoice class= control-label>選項" + count + "</label ><input id=txtAns asp-for=FChoice class=form-control /><span asp-validation-for=FChoice class=text-danger></span><button class=btn id=del-btn type=button><i class=fasfa-trash-alt> </i>Delete</button></div>"
            var divChoice = `<div class="form-group" id="choice" ><label asp -for="FChoice" class="control-label">選項</label ><br /><input type="checkbox" name="FCorrectAnswer" value=1 onclick="doCheck(this)" style="margin:0 3px 0 0;" /><input id="txtAns" asp-for="FChoice" class="form-control"/><span asp-validation-for="FChoice" class="text-danger"></span><button class="btn" id="del-btn" type="button" style="margin:10px 0 0 25px"><i class="fasfa-trash-alt"> </i>Delete</button></div>`
            $('#ansList').append(divChoice);
        })
        $("#outdiv").on("click", "#del-btn", function () {
            console.log("delete");
            $(this).closest("#choice").remove();
        });

        // 將所有選項存入Array 
        $('#createNew').click(function () {
            var ansArr = [];
            $('#ansList > #choice').each(function () {
                var ans = $(this).find('input').val();
                ansArr.push(ans);
            })
            var jsondata = JSON.stringify({
                FSubjectId: $('#FSubjectId').val(),
                FQuestion: $('#FQuestion').val(),
                FQuestionTypeId: $('#FQuestionTypeId').val(),
                FChoiceList: ansArr,
                FLevel: $('#FLevel').val()
            })
            $.ajax({
                url: "@Url.Content("~/QuestionBank/Create")",
                type: "POST",
                contentType: "application/json",
                data:jsondata
            }).done(function (data) {
                Swal.fire({
                    icon: 'success',
                    title: '新增成功',
                    showConfirmButton: true,
                    timer:1500
                })
            })
        })

    </script>
}
