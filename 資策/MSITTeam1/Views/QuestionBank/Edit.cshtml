@model IList<MSITTeam1.ViewModels.CQuestionBankViewModel>
@using MSITTeam1.ViewModels;

@{
    ViewData["Title"] = "Edit";
}

<div class="container" style="padding:20px;">
    <div>
        <h1>題目編輯</h1>
        <h4>題目內容</h4>
        <hr />
    </div>

    <div>
        @{
            if (Model != null)
            {
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @*<div class="form-group">
                                    <label asp-for="FQuestionImage" class="control-label"></label>
                                        <input asp-for="FQuestionImage" class="form-control" />
                                        <span asp-validation-for="FQuestionImage" class="text-danger"></span>
                                    <input type="file" name="photo" class="form-control" />
                                </div>*@

                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var item = Model[0];
                                <div class="form-group">
                                    @Html.HiddenFor(modelItem => Model[i].FSubjectId)
                                    @Html.HiddenFor(modelItem => Model[i].FCSubjectId)
                                    @Html.HiddenFor(modelItem => Model[i].FQuestionId)
                                    @Html.HiddenFor(modelItem => Model[i].FCQuestionId)
                                    @Html.HiddenFor(modelItem => Model[i].FSn)
                                </div>
                                <div class="form-group">
                                    <label id="test1" class="control-label">@Html.DisplayNameFor(modelItem => Model[i].FQuestion) </label>
                                    <input class="form-control" @Html.EditorFor(modelItem => Model[i].FQuestion) />
                                    <span class="text-danger" @Html.ValidationMessageFor(modelItem => Model[i].FQuestion) ></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">@Html.DisplayNameFor(modelItem => Model[i].FQuestionTypeId) </label>
                                    <input class="form-control" @Html.EditorFor(modelItem => Model[i].FQuestionTypeId) />
                                    <span class="text-danger" @Html.ValidationMessageFor(modelItem => Model[i].FQuestionTypeId) ></span>
                                </div>
                                if (Model[i].FSubjectId == item.FSubjectId && Model[i].FQuestionId == item.FCQuestionId)
                                {
                                    <div class="form-group">
                                        <label class="control-label">@Html.DisplayNameFor(modelItem => Model[i].FChoice) </label>
                                        <input class="form-control" @Html.EditorFor(modelItem => Model[i].FChoice) />
                                        <span class="text-danger" @Html.ValidationMessageFor(modelItem => Model[i].FChoice) ></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">@Html.DisplayNameFor(modelItem => Model[i].FCorrectAnswer) </label>
                                        <input class="form-control" @Html.EditorFor(modelItem => Model[i].FCorrectAnswer) />
                                        <span class="text-danger" @Html.ValidationMessageFor(modelItem => Model[i].FCorrectAnswer) ></span>
                                    </div>
                                }
                            }

                            @*<div class="form-group">
                                    <label asp-for="VupdateTime" class="control-label"></label>
                                    <input asp-for="VupdateTime" class="form-control" />
                                    <span asp-validation-for="VupdateTime" class="text-danger"></span>
                                </div>*@
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                            <div>
                                <a asp-action="List">返回題目列表</a>
                            </div>
                        </form>
                    </div>
                </div>
            }
        }
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
