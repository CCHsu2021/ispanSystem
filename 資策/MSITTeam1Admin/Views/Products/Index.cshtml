@model IEnumerable<MSITTeam1Admin.ViewModels.CProductAdminViewModel>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
        <div class="col-12">
            <div class="page-title my-4">
                <h2>產品維護</h2>
            </div>
        </div>
        <div class="col-12">
            <p>
                <a asp-action="Create" class="btn btn-primary">新增產品</a>
            </p>
        </div>
    <section id="main-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="bootstrap-data-table-panel">
                        <div class="table-responsive">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered my-3">
                                <thead>
                                    <tr>
                                        <th>名稱</th>
                                        <th>價格</th>
                                        <th>成本</th>
                                        <th>圖片</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Price)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Cost)
                                            </td>
                                            <td>
                                                <img src="~/images/products/@item.ImgPath" width="100" height="100" />
                                            </td>
                                            <td>
                                                <a class="btn btn-default" asp-action="Edit" asp-route-id="@item.ProductId">修改</a>
                                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ProductId">刪除</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /# card -->
            </div>
            <!-- /# column -->
        </div>
        <!-- /# row -->
    </section>

